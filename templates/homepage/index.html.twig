{% extends 'base.html.twig' %}


{% block title %}Liste des produits{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('indexHomepage') }}
{% endblock %}

{% block body %}

  <main role="main"> 

  {% for message in app.flashes('notice') %}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    {{ message }}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
    </button>
</div>
{% endfor %}
  

      <div class="album py-2" style="background-color: #F2D5CE;">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-2">
                  {# {% include 'product/_filter.html.twig' with {form:form} only %} #}
            </div>

            <div class="col-md-8 d-flex flex-wrap">
              <div class="col-md-12 border">
                <img class="card-img img-fluid" src="{{ asset('build/images/banniere_eco.jpg')}}" alt="Card image">
              </div>
              
              {% for product in products %}
                {% include 'product/_card.html.twig' with {product:product} only %} 
              {% endfor %}
              <div class="col-12">
                <div class="navigation--home navigation d-flex justify-content-center p-4 mt-2">
                  {{ knp_pagination_render(products) }}
                </div>
              </div>
            </div>
        </div>



          </div>
    </main>
{% endblock %}


{% block side_filter %}
<div class="container-fluid">
    <div class="col-md-2 fixed-bottom" style="margin-bottom:100px;">
        <div class="col-12">
            <div class="collapse" id="navbarToggleExternalContent">
              {% include 'product/_filter.html.twig' with {form:form} only %}
            </div>
            <div class="col-2">
            <div class="navbar navbar-light">
              <button class="navbar-toggler bg-light" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            </div>
          </div>
        </div>
      </div>
  </div>
  {% endblock %}


{% block navBar %}
{% endblock %}

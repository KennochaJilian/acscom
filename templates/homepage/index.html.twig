{% extends 'base.html.twig' %}


{% block title %}Liste des produits{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('indexHomepage') }}
{% endblock %}

{% block body %}

   <main role="main"> 

  {% for message in app.flashes('notice') %}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    {{ message }}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
    </button>
</div>
{% endfor %}
  

      <div class="album py-2 bg-light">
        <div class="container-fluid">
          <div class="row">

            <div class="col-md-2">
          
            {% include 'product/_filter.html.twig' with {form:form} only %}
            </div>

            <div class="col-md-8 d-flex flex-wrap no-gutters">


              <div class="col-md-12 border">
                <img class="card-img img-fluid" src="{{ asset('build/images/banniere_eco.jpg')}}" alt="Card image">
              </div>
              
              
              <div class="col-md-8 border">

              </div>
              
              {% for product in products %}
                {% include 'product/_card.html.twig' with {product:product} only %} 
              {% endfor %}
            
            </div>
            
    
        </div>



          </div>
    </main>
{% endblock %}

{% block navBar %}
{% endblock %}

        <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="position: fixed; bottom: 0; right: 0; left: 0; z-index: 99;  border-top: 1px solid black">
      <a class="navbar-brand" href="{{path('homepage')}}"><img class="w-50" src="{{ asset('build/images/logo.png' ) }}" alt="LOGO"></a>
      <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar_home navbar-nav mx-auto ">
      <li class="nav-item p-1">
        <a class="nav-link"  href="{{ path('pageCategory', {'id' : 1}) }}">Vêtements <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item p-1">
        <a class="nav-link"  href="{{ path('pageCategory', {'id' : 2}) }}">Accessoires</a>
      </li>
      <li class="nav-item p-1">
        <a class="nav-link"  href="{{ path('pageCategory', {'id' : 4}) }}">Maison</a>
      </li>
      <li class="nav-item p-1">
        <a class="nav-link"  href="{{ path('pageCategory', {'id' : 5}) }}">Bureau</a>
      </li>    
    
    {# <div class="col-3 d-flex flex-row justify-content-center"> #}
    <li class="d-flex">
      <form method="POST" action="{{ path('homepage') }}" class="form-inline">
        <input name="search" class="form-control mr-sm-2" type="search" placeholder="Rechercher" aria-label="Search">
        <button class="button_search_home btn btn-dark mx-2" style="font-family: 'Baloo'; letter-spacing: 2px;" type="submit">Rechercher</button>
      </form>
    
    </li>
    {# </div> #}
      
        <li class="nav-item p-1 ">
            <a class="nav-link"  href="{{ path('contact_form') }}">Contact <span class="sr-only">(current)</span></a>
          </li>
      {% if not app.user %}
      <li class="nav-item p-1 ">
        <a class="nav-link"  href="{{ path('security_login') }}"> Connexion <span class="sr-only">(current)</span></a>
      </li>

      {% else %}
        <li class="nav-item p-1 ">
        <a class="nav-link"  href="{{ path('profil_user') }}"> Profil <span class="sr-only">(current)</span></a>
      </li>
        <li class="nav-item p-1 ">
        <a class="nav-link"  href="{{ path('security_logout') }}"> Deconnexion <span class="sr-only">(current)</span></a>
      </li>
      {% endif %}
      <li class="nav-item p-1 d-flex">
        <a class="nav-link"  href="{{ path('cart_index') }}">Panier</a>
        <p id="js_pillCart"class="badge badge-danger">{{app.session.get('panier')|length}}</p>
      </li>          
    </ul>
    <span class="font-weight-light">
      <a class="text-decoration-none text-black-50"  href="{{ path('legal_disclaimers') }}">Mentions légales</a>
    </span> 

  </div>
</nav>
      </header>


{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('indexContact') }}
{% endblock %}

{% block body %}
<div class="container form_container">
    <div class="d-flex flex-column text-center p-4 ">
        <h1> Besoin d'aide ? </h1>
    </div>
    <div class="d-flex flex-column w-50 mx-auto text-center p-4">

{{ form_start(contactForm)}}


    {{ form_row(contactForm.name)}}
    {{ form_row(contactForm.email)}}
    {{ form_row(contactForm.reason)}}
    {{ form_row(contactForm.content)}}
    
    <button type="submit" class="button--help button btn text-center">Envoyer !</button>
    
    {{ form_end(contactForm)}}

    </div>
</div>



{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}

<h1> Inscription </h1>

{{form_start(form)}}

{{form_row(form.username, {'label': 'Nom utilisateur', 'attr': {'placeholder' : 'Nom'}}) }}
{{form_row(form.email, {'label': 'Adresse email ','attr': {'placeholder' : 'Adresse mail'}})}}
{{form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder' : 'Mot de passe'}}) }}
{{form_row(form.confirm_password, {'label': 'Confirmation du mot de passe','attr': {'placeholder' : 'Confirmation de mot de passe'}}) }}
{{form_row(form.telephoneNumber, {'label': 'Numéro de téléphone','attr': {'placeholder' : 'Numéro de téléphone'}, 'type' : 'tel'}) }}
{{form_row(form.birthdate, {'label': 'Date de naissance'}) }}
{{form_row(form.newsletter, {'label': 'Inscription à la newsletter'}) }}

<button type="submit" class="btn btn-success"> Inscription ! </button>

{{form_end(form)}}

{% endblock %}
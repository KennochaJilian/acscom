{% extends "base.html.twig" %}

{% block body %}

    <div class="container-fluid product_page my-2">

        <div class="d-flex flex-row justify-content-center align-items-center no-gutters">

            <div class="d-flex flex-column col-6 image_product slider_cart">

                    <div class="card bg-dark text-white">
                        <img class="card-img img-fluid" src="http://placehold.it/600x550" alt="Card image">
                        <div class="d-flex flex-column card-img-overlay justify-content-end mb-4 ml-4 ">
                            <h1 class="card-title">{{ product.name}}</h1>
                            <div class="btn btn-sm btn-primary" style="width:8%;"><small>Tag</small></div> 
                            <p class="card-text">{{ product.description}}</p>                           
                        </div>
                    </div>     


            </div>

            <div class="d-flex flex-column col-4 image_info px-2 ">

                <div class="row">
                    <div class="col-12 ">
                        <h2>{{ product.name}}</h2>
                        <p>{{ product.description}}</p>
                        <div class="row justify-content-between my-4  ">
                            <div class="d-flex flex-column col-4 w-100 justify-content-center text-center ">
                                <p style="font-size: 40px;">{{ product.price}} €</p>
                            </div>
                            <div class="col-8">
                                <div class="d-flex flex-column">
                                    <div class="d-flex flex-row justify-content-start align-items-center mb-2">
                                        <button id="add_product_wish">+</button>
                                        <input class="w-25 text-center" id="number_product_wish" type="text" value="0">
                                        <p>Ajouter à ma wishlist</p>
                                    </div>
                                    <div class="d-flex flex-row justify-content-start align-items-center mb-4">
                                        <button id="add_product_cart">+</button>
                                        <input class="w-25 text-center" id="number_product_cart" type="text" value="1">
                                        <p>Ajouter au panier</p>
                                    </div>
                                    <a href="{{ path('cart_add', {'id' : product.id}) }}">Ajouter au panier</a>
                                </div>
                            </div>
                        </div>

                        <div class="row no-gutters">

                            <div class="col-12 ">
                            <h4>Produits complémentaires</h4>
                            <p>Lorem, ipsum dolor sit amet cus! Accusantium, deleniti consequuntur! Facere repudiandae aliquam iste cum quidem sit voluptatibus.</p>
                            </div>
                            <div class="col-12">
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="http://placehold.it/300x200" alt="First slide">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>Salut</h5>
                                            <p>20€</p>
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="http://placehold.it/300x200" alt="Second slide">
                                        <div class="carousel-caption d-flex flex-row border justify-content-around align-items-center">
                                            <h5>Tu va</h5>
                                            <h5>10€</h5>
                                            <div class="btn btn-danger w-50">View</div>
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="http://placehold.it/300x200" alt="Third slide">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>Bien</h5>
                                            <p>45€</p>
                                        </div>
                                    </div>
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                
                </div>
            
            </div>

        </div>

    </div>

    
{% endblock body %}



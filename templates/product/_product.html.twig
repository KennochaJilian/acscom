{% extends "base.html.twig" %}

{% block body %}

    <div class="container-fluid product_page my-2">

        <div class="d-flex flex-row justify-content-center align-items-center no-gutters">

            <div class="d-flex flex-column col-6 image_product slider_cart">

                    <div class="card text-white">
                        <img class="card-img img-fluid" style= "background-color : #B6CDD8; " src="{{ asset('build/images/' ~ product.images)}}" alt="Card image">
                        <div class="d-flex flex-column card-img-overlay justify-content-end mb-4 ml-4 ">
                            <h1 class="card-title">{{ product.name}}</h1>
                            <div class="btn btn-sm btn-primary" style="width:8%;"><small>Tag</small></div> 
                            <p class="card-text">{{ product.description}}</p>                           
                        </div>
                    </div>     


            </div>

            <div class="d-flex flex-column col-4 image_info px-2 ">

                <div class="row">
                    <div class="col-12 ">
                        <h2>{{ product.name}}</h2>
                        <p>{{ product.description}}</p>
                        <div class="row justify-content-between my-4  ">
                            <div class="d-flex flex-column col-4 w-100 justify-content-center text-center ">
                                <p style="font-size: 40px;">{{ product.price}} €</p>
                            </div>
                            <div class="col-8">
                                {{form(form)}}
                            </div>
                        </div>

                        <div class="row no-gutters">

                            <div class="col-12 ">
                            <h4>Produits complémentaires</h4>
                            </div>
                            <div class="col-12">
                                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">

                            {% set activeCarrousel = false %}

                            {% for product in productsAssociated  %}
                                {% if not activeCarrousel %}
                                <div class="carousel-item active">
                                {% set activeCarrousel = true %}
                                {% else %}
                                <div class="carousel-item">
                                {% endif %}
                                
                                        <img class="d-block w-100" src="http://placehold.it/300x200" alt="First slide">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>{{product.name}}</h5>
                                            <p>{{product.price}}</p>
                                            <a  class="btn btn-primary" href="{{path ('pageProduct', {'id' : product.id})}}">Voir</a>
                                        </div>
                                </div>
                            {% endfor %}
                                </div>

                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                            </a>
                            </div>
                            </div>
                            
                            {# <div class="col-12">
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="http://placehold.it/300x200" alt="First slide">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>Salut</h5>
                                            <p>20€</p>
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="http://placehold.it/300x200" alt="Second slide">
                                        <div class="carousel-caption d-flex flex-row border justify-content-around align-items-center">
                                            <h5>Tu va</h5>
                                            <h5>10€</h5>
                                            <div class="btn btn-danger w-50">View</div>
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="http://placehold.it/300x200" alt="Third slide">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>Bien</h5>
                                            <p>45€</p>
                                        </div>
                                    </div>
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div> #}
                        </div>
                    </div>
                
                </div>
            
            </div>

        </div>
        <div class="row mt-5">
            <div class="col-2"></div>
            <div class="col-8 ">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {{form_start(form_comment)}}
                    <div class="row">
                        <!-- <div align="center">
                            <i class="fa fa-star fa-2x" data-index="0"></i>
                            <i class="fa fa-star fa-2x" data-index="1"></i>
                            <i class="fa fa-star fa-2x" data-index="2"></i>
                            <i class="fa fa-star fa-2x" data-index="3"></i>
                            <i class="fa fa-star fa-2x" data-index="4"></i>
                            <br><br>
                        </div> -->
                        <div class="col-1">
                            <button id="add_note">+</button>
                            
                        </div>
                        <div class="col-1">
                            {{form_row(form_comment.note)}}
                        </div>
                        <div class="col-1">
                            <button id="substract_note">-</button>
                        </div>
                    </div>
                    {{form_row(form_comment.commentary)}}
                    {{form_end(form_comment)}}
                {% endif %}
                <div>
                    <h6>Commentaires:</h6>
                    {% for commentary in commentaries %}
                    <div class="row">
                        <div class="col-6">
                            <h6>{{commentary.username.username}}</h6>
                            <p>{{commentary.note}}/5</p>
                            <p>{{commentary.commentary}}</p>
                        </div>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') and commentary.username.id == user.id %}
                        <div class="col-2">
                            <a href="{{path('edit_comment', {'id' : product.id, 'idcomment' : commentary.id} )}}">edit</a>
                            <a class="js_deleteComment" data-idcomment = "{{commentary.id}}" data-id="{{product.id}}"  href="{{ path('delete_comment', {'id' : product.id, 'idcomment' : commentary.id} )}}">delete</a>
                        </div>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    
{% endblock body %}



{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('product') }}
{% endblock %}

{% block body %}

    <div class="container-fluid product_page my-2">

        <div class="d-flex flex-row justify-content-center align-items-center no-gutters">

            <div class="d-flex flex-column col-6 image_product slider_cart">

                    <div class="card text-white">
                        <img class="card-img img-fluid" style= "background-color : #B6CDD8; " src="{{ asset('build/images/' ~ product.images)}}" alt="Card image">
                        <div class="d-flex flex-column card-img-overlay justify-content-end mb-4 ml-4 ">
                            <h1 class="card-title">{{ product.name}}</h1>
                            <div class="btn btn-sm btn-primary" style="width:8%;"><small>Tag</small></div> 
                            <p class="card-text">{{ product.description}}</p>                           
                        </div>
                    </div>     


            </div>

            <div class="d-flex flex-column col-4 image_info px-2 ">

                <div class="row">
                    <div class="col-12 ">
                        <h2>{{ product.name}}</h2>
                        {% if commentaries %}
                            {% set sum_note = null %}
                            {% set loop_nbr = 0 %}
                            {% set vote_nbr = 0 %}
                            {% for commentary in commentaries %}
                                {% set sum_note = sum_note + commentary.note %}
                                {% set loop_nbr = loop_nbr + 1 %}
                                {% if commentary.note != null %}
                                {% set vote_nbr = vote_nbr + 1 %}
                                {% endif %}
                            {% endfor %}
                            {% if sum_note != null %}
                                {% set average_note = sum_note / loop_nbr %}
                                Note: {{ average_note }} /5 (Vote: {{vote_nbr}})
                            {% endif %}
                        {% endif %}
                        <p>{{ product.description}}</p>
                        <div class="row justify-content-between my-4  ">
                            <div class="d-flex flex-column col-4 w-100 justify-content-center text-center ">
                                <p style="font-size: 40px;">{{ product.price}} €</p>
                            </div>
                            <div class="col-8">
                                {{form(form)}}
                            </div>
                        </div>

                        <div class="row no-gutters">

                            <div class="col-12 ">
                            <h4>Produits complémentaires</h4>
                            </div>
                            <div class="col-12">
                                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">

                            {% set activeCarrousel = false %}

                            {% for product in productsAssociated  %}
                                {% if not activeCarrousel %}
                                <div class="carousel-item active">
                                {% set activeCarrousel = true %}
                                {% else %}
                                <div class="carousel-item">
                                {% endif %}
                                
                                        <img class="d-block w-100" src="http://placehold.it/300x200" alt="First slide">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>{{product.name}}</h5>
                                            <p>{{product.price}}</p>
                                            <a  class="btn btn-primary" href="{{path ('pageProduct', {'id' : product.id})}}">Voir</a>
                                        </div>
                                </div>
                            {% endfor %}
                                </div>

                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                            </a>
                            </div>
                            </div>
                        </div>
                    </div>
                
                </div>
            
            </div>

        </div>
        <div class="row mt-5">
            <div class="col-2"></div>
            <div class="col-8 ">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {{form_start(form_comment)}}
                    <div class="row">
                        <!-- <div align="center">
                            <i class="star" data-index="0"></i>
                            <i class="star" data-index="1"></i>
                            <i class="star" data-index="2"></i>
                            <i class="star" data-index="3"></i>
                            <i class="star" data-index="4"></i>
                            <br><br>
                        </div> -->
                        <div class="col-1">
                            {{form_row(form_comment.note)}}
                        </div>
                    </div>
                    {{form_row(form_comment.commentary)}}
                    {{form_end(form_comment)}}
                {% endif %}
                <div>
                    
                    {% if commentaries %}
                        <h6>Commentaires:</h6>
                    {% endif %}
                    {% for commentary in commentaries %}
                    <div class="row">
                        <div class="col-6">
                            <h6>{{commentary.username.username}}</h6>
                            {% if commentary.note %}
                            <p>{{commentary.note}}/5</p>
                            {% endif %}
                            <p>{{commentary.commentary}}</p>
                        </div>
                        {% if (is_granted('IS_AUTHENTICATED_FULLY') and commentary.username.id == user.id) or (is_granted('ROLE_ADMIN')) %}
                        <div class="col-2">
                            <a href="{{path('edit_comment', {'id' : product.id, 'idcomment' : commentary.id} )}}">edit</a>
                            <a class="js_deleteComment" data-idcomment = "{{commentary.id}}" data-id="{{product.id}}"  href="{{ path('delete_comment', {'id' : product.id, 'idcomment' : commentary.id} )}}">delete</a>
                        </div>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    
{% endblock body %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('comment') }}
{% endblock %}